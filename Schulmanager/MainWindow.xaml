<Window 
    x:Class="Schulmanager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Schulmanager.ViewModels"
    xmlns:local="clr-namespace:Schulmanager"
    xmlns:conv="clr-namespace:Schulmanager.Converters"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450" Width="800">

    <Window.Resources>
        <conv:DateOnlyToDateTimeConverter x:Key="DateOnlyConverter" />
        <Style TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <Border 
                                BorderBrush="Red" 
                                BorderThickness="1" 
                                CornerRadius="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter 
                        Property="ToolTip"
                        Value="{Binding RelativeSource={RelativeSource Self}, 
                        Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <GroupBox 
            Header="Studentenliste" 
            Grid.Column="0" 
            Margin="0,0,10,0">
            <DataGrid 
                ItemsSource="{Binding Students}" 
                SelectedItem="{Binding SelectedStudent}"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="ID" 
                        Binding="{Binding StudentId}" 
                        Width="50"/>
                    <DataGridTextColumn Header="Vorname">
                        <DataGridTextColumn.Binding>
                            <Binding 
                                Path="Vorname" 
                                UpdateSourceTrigger="PropertyChanged" 
                                ValidatesOnNotifyDataErrors="True"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Nachname">
                        <DataGridTextColumn.Binding>
                            <Binding 
                                Path="Nachname" 
                                UpdateSourceTrigger="PropertyChanged" 
                                ValidatesOnNotifyDataErrors="True"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn 
                        Header="Klasse" 
                        Binding="{Binding Klasse.Bezeichnung}" 
                        Width="80"/>
                    <DataGridTextColumn Header="Stadt">
                        <DataGridTextColumn.Binding>
                            <Binding 
                                Path="Stadt" 
                                UpdateSourceTrigger="PropertyChanged" 
                                ValidatesOnNotifyDataErrors="True"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Student bearbeiten" Grid.Column="1">
            <StackPanel Margin="10">
                <Label Content="Vorname:"/>
                <TextBox 
                    Text="{
                    Binding SelectedStudent.Vorname, 
                    UpdateSourceTrigger=PropertyChanged, 
                    ValidatesOnNotifyDataErrors=True,
                    NotifyOnValidationError=True}"
                    PreviewTextInput="OnlyLetters_PreviewTextInput"
                    DataObject.Pasting="TextBox_Pasting"
                    Margin="0,0,0,10"/>

                <Label Content="Nachname:"/>
                <TextBox 
                    Text="{ Binding SelectedStudent.Nachname, 
                    UpdateSourceTrigger=PropertyChanged, 
                    ValidatesOnNotifyDataErrors=True, 
                    NotifyOnValidationError=True}"
                    PreviewTextInput="OnlyLetters_PreviewTextInput"
                    DataObject.Pasting="TextBox_Pasting"
                    Margin="0,0,0,10"/>

                <Label Content="Geburtsdatum:"/>
                <DatePicker 
                    SelectedDate="{
                        Binding SelectedStudent.Geburtsdatum, 
                        Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged, 
                        Converter={StaticResource DateOnlyConverter}, 
                        ValidatesOnNotifyDataErrors=True, 
                        NotifyOnValidationError=True}"
                        Margin="0,0,0,10"/>

                <Label Content="Straße:"/>
                <TextBox 
                    Text="{
                        Binding SelectedStudent.Strasse, 
                        UpdateSourceTrigger=PropertyChanged, 
                        ValidatesOnNotifyDataErrors=True, 
                        NotifyOnValidationError=True}"
                        Margin="0,0,0,10"/>

                <Label Content="Stadt:"/>
                <TextBox 
                    Text="{
                        Binding SelectedStudent.Stadt, 
                        UpdateSourceTrigger=PropertyChanged, 
                        ValidatesOnNotifyDataErrors=True, 
                        NotifyOnValidationError=True}"
                        Margin="0,0,0,10"/>

                <Label Content="Klasse:"/>
                <ComboBox 
                    ItemsSource="{Binding Klassen}"
                    DisplayMemberPath="Bezeichnung"
                    SelectedValuePath="KlasseId"
                    SelectedValue="{Binding SelectedStudent.KlasseId}"
                    Margin="0,0,0,20"/>

                <Separator Margin="0,0,0,20"/>
                <Button 
                    Content="Neuer Student" 
                    Command="{Binding CreateNewCommand}" 
                    Height="30" 
                    Margin="0,0,0,5" 
                    Background="LightBlue"/>
                <Button 
                    Content="Speichern" 
                    Command="{Binding SaveCommand}" 
                    Height="30" 
                    Margin="0,0,0,5" 
                    Background="LightGreen"/>
                <Button 
                    Content="Löschen" 
                    Command="{Binding DeleteCommand}" 
                    Height="30" 
                    Background="LightCoral"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
